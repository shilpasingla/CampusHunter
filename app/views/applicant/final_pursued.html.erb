<% content_for :title do %>
    CampusHunter - Final Pursues
<% end %>

<div id="page-heading" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <h1>Final Pursues</h1>
  <br/><br/>

  <div style="float: left; padding-bottom: 5px;">
    <% if @pool == true %>
    <a href="/applicant/download/<%= "Final" %>/<%= "#{@college.name}" %>/<%= "#{@college.name}" %>.csv">
      <input type="button" value="Download csv" class="submit-shortList">
    </a>
        <% else %>
        <a href="/applicant/download/<%= "Final" %>/<%= "#{@college.id}" %>/<%= "#{@college.name}" %>.csv">
          <input type="button" value="Download csv" class="submit-shortList">
        </a>
        <% end %>
    &nbsp; &nbsp;
    <% if @pool == true %>
        <a href="/applicant/download_for_campus/<%= "Final" %>/<%= "#{@college.name}" %>/<%= "#{@college.name}" %>.csv">
          <input type="button" value="CSV For Campus" class="submit-shortList">
        </a>
    <% else %>
        <a href="/applicant/download_for_campus/<%= "Final" %>/<%= "#{@college.id}" %>/<%= "#{@college.name}" %>.csv">
          <input type="button" value="CSV For Campus" class="submit-shortList">
        </a>
    <% end %>


  </div>
  <div style=" float: right;">
    <%= if @pool.present?
          search_field_tag "search", nil, :placeholder => "search",
                           :partial => "final_pursued_table", :poolname => @college.name , :year => @college.year,
                           :LogicPursued => "false",
                           :ParingPursued => "false",
                           :FirstTechPursued => "false",
                           :FinalPursued => "true"
        else
          search_field_tag "search", nil, :placeholder => "search",
                           :partial => "final_pursued_table", :collegeId => @college.id,
                           :LogicPursued => "false",
                           :ParingPursued => "false",
                           :FirstTechPursued => "false",
                           :FinalPursued => "true"

        end
    %>
  </div>

</div>
<div class="clear"></div>
<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
  <tr>
    <th class="topleft"></th>
    <td id="tbl-border-top">&nbsp;</td>
    <th class="topright"></th>
  </tr>
  <tr>
    <td id="tbl-border-left"></td>
    <td>
      <div id="content-table-inner">
        <div id="applicants">
          <%= render 'final_pursued_table' %>
        </div>
      </div>
      <div class="clear"></div>
    </td>
    <td id="tbl-border-right"></td>
  </tr>
  <tr>
    <th class="sized bottomleft"></th>
    <td id="tbl-border-bottom">&nbsp;</td>
    <th class="sized bottomright"></th>
  </tr>
</table>



