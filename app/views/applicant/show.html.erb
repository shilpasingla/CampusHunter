<% content_for :title do %>
    CampusHunter
<% end %>

<% content_for :scripts do %>
    <%= javascript_include_tag "jquery.selectbox-0.5" %>
    <%= javascript_include_tag "applicant" %>

<% end %>

<% content_for :styles do %>
    <%= stylesheet_link_tag "pro_dropline_ie" %>
    <%= stylesheet_link_tag "pro_dropline" %>
<% end %>

<div id="page-heading">
  <h1>Applicant's Details </h1>
  <br><br>
  <%= form_tag( {:action => 'logic_pursued'},{:method => 'get'})  do %>
      <%= hidden_field_tag :collegename, params[:collegename] %>
      <div style="float: left; padding-bottom: 5px;;">
        CUTOFF: &nbsp;
        <%= text_field_tag(:cutoff, nil, :partial => "show_table", :style => 'width: 100px; height: 15px; margin-bottom: 0px;  ') %>
        &nbsp; &nbsp;
        <%= submit_tag("Shortlist Candidates", :class => "submit-shortList") %>
      </div>

      <div style=" float: right;">
        <%= search_field_tag "search", nil, :placeholder => "search", :partial => "show_table", :collegename => @college.name %>
      </div>

  <% end %>
</div>

<div class="clear"></div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
  <tr>
    <th class="topleft"></th>
    <td id="tbl-border-top">&nbsp;</td>
    <th class="topright"></th>
  </tr>
  <tr>
    <td id="tbl-border-left"></td>
    <td>
      <div id="content-table-inner">
        <div id="applicants">
          <%= render 'show_table' %>
        </div>
      </div>

      <div class="clear"></div>
    </td>
    <td id="tbl-border-right"></td>
  </tr>
  <tr>
    <th class="sized bottomleft"></th>
    <td id="tbl-border-bottom">&nbsp;</td>
    <th class="sized bottomright"></th>
  </tr>
</table>