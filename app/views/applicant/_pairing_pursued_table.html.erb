<table id="applicants2" class="display">
  <thead>
  <tr>
    <th>Name</th>
    <th>RollNo</th>
    <th>Score</th>
    <th>Branch</th>
    <th>Role</th>
    <th>FirstTech</th>
    <th>FirstStatus</th>
    <th>Comment</th>
  </tr>
  </thead>


  <tbody>
  <% @applicant.each do |app| %>

      <tr>
        <td><%= app.Name %></td>
        <td><%= app.RollNo %></td>
        <td><%= app.Score %></td>
        <td><%= app.Branch %> </td>
        <td><%= text_field :applicant ,:role, :class => "Role",:value => app.Role, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>
        <td><%= text_field :applicant ,:firstTech, :class => "FirstTech",:value => app.FirstTech, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>
        <td><%= radio_button_tag "#{app.id}",'pursue', (true || app.FirstStatus),:value => true,:class => "FirstStatus", :onchange => "autoSave(this)", :style => 'width: 80px; height: 15px;' %> pursue
          <br><%= radio_button_tag "#{app.id}",'pass',!(false || app.FirstStatus) , :value => false,:class => "FirstStatus",:onchange => "autoSave(this)",:style => 'width: 80px; height: 15px;'%> pass</td>

        <td><%= text_field :applicant ,:comment, :class => "Comment",:value => app.Comment, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>

      </tr>

  <% end %>
  </tbody>


</table>