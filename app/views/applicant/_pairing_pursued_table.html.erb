<table id="college" class="display" border="0" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>Name</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>RollNo</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>Score</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>Branch</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>Role</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>FirstTech</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>FirstStatus</a></th>
    <th class="table-header-repeat line-left " style="text-align: left;"><a>Comment</a></th>
  </tr>

  <% @applicant.each do |app| %>

      <tr>
        <td><%= app.Name %></td>
        <td><%= app.RollNo %></td>
        <td><%= app.Score %></td>
        <td><%= app.Branch %> </td>
        <td><%= text_field :applicant, :role, :class => "Role", :value => app.Role, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>
        <td><%= text_field :applicant, :firstTech, :class => "FirstTech", :value => app.FirstTech, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>
        <td><%= radio_button_tag "#{app.id}", 'pursue', (true || app.FirstStatus), :value => true, :class => "FirstStatus", :onchange => "autoSave(this)", :style => 'width: 80px; height: 15px;' %>
          pursue
          <br><%= radio_button_tag "#{app.id}", 'pass', !(false || app.FirstStatus), :value => false, :class => "FirstStatus", :onchange => "autoSave(this)", :style => 'width: 80px; height: 15px;' %>
          pass
        </td>

        <td><%= text_field :applicant, :comment, :class => "Comment", :value => app.Comment, :id => "#{app.id}", :onchange => "autoSave(this)" %></td>

      </tr>

  <% end %>


</table>

