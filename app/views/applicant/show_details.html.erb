<h1>Applicant's Details</h1>

<p> Download :<%= link_to "csv" , url = "/applicant/show_details.csv"%></p>
<br>

    <table id="applicants" class="display">
<thead> 
 <tr>
    <th style="border:1px solid black;">Name</th>
    <th style="border:1px solid black;">College</th>
    <th style="border:1px solid black;">Score</th>
    <th style="border:1px solid black;">Branch</th>
    <th style="border:1px solid black;">Role</th>
    <th style="border:1px solid black;">CodePairing</th>
    <th style="border:1px solid black;">PairingStatus</th>
    <th style="border:1px solid black;">FirstTech</th>
    <th style="border:1px solid black;">FirstStatus</th>
    <th style="border:1px solid black;">SecondTech</th>
    <th style="border:1px solid black;">Result</th>
    <th style="border:1px solid black;">Comment</th>
  </tr>
</thead>

<tbody>
  <% @applicant.each do |app|  %>

      <tr>
        <td style="border:1px solid black;"><%= app.Name %></td>
        <td style="border:1px solid black;"><%= app.college %></td>
        <td style="border:1px solid black;"><%= app.Score %></td>
        <td style="border:1px solid black;"><%= app.Branch %> </td>
        <td style="border:1px solid black;"><%= app.Role %> </td>
        <td style="border:1px solid black;"><%= app.CodePairing %></td>
        <td style="border:1px solid black;"><%= app.PairingStatus %> </td>
        <td style="border:1px solid black;"><%= app.FirstTech %></td>
        <td style="border:1px solid black;"><%= app.FirstStatus %></td>
        <td style="border:1px solid black;"><%= app.SecondTech %></td>
        <td style="border:1px solid black;"><%= app.Result %> </td>
        <td style="border:1px solid black;"><%= app.Comment %></td>
      </tr>

  <% end %>
</tbody>
</table>