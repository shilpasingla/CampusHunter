      <!--  start nav-outer -->
      <div class="nav-outer">

        <!--  start nav -->
        <div class="nav">

        <span class="select">
        <% if @pool == true %>
        <a href="/applicant/show/<%= "#{@college.name}" %>">
          <b>
            Applicant Details
          </b>
        </a>
          <% else %>
        <a href="/applicant/show/<%= "#{@college.id}" %>">
          <% end %>
          <b>
            Applicant Details
          </b>
        </a>
        </span>

          <div class="nav-divider">&nbsp;</div>

        <span class="select">
          <% if @pool == true %>
        <a href="/applicant/codePairing/<%= "#{@college.name}" %>">
          <b>
            Code Pairing
          </b>
        </a>
          <% else %>
        <a href="/applicant/codePairing/<%= "#{@college.id}" %>">
          <% end %>
          <b>
            Code Pairing
          </b>
          </a>
        </span>

          <div class="nav-divider">&nbsp;</div>

        <span class="select">
          <% if @pool == true %>
        <a href="/applicant/firstTech/<%= "#{@college.name}" %>">
          <b>
            First Technical
          </b>
        </a>
          <% else %>
        <a href="/applicant/firstTech/<%= "#{@college.id}" %>">
          <% end %>
          <b>
            First Technical
          </b>
          </a>
        </span>

          <div class="nav-divider">&nbsp;</div>

        <span class="select">
          <% if @pool == true %>
        <a href="/applicant/secondTech/<%= "#{@college.name}" %>">
          <b>
            Second Technical
          </b>
        </a>
          <% else %>
        <a href="/applicant/secondTech/<%= "#{@college.id}" %>">
          <% end %>
          <b>
            Second Technical
          </b>
          </a>
        </span>
          <div class="nav-divider">&nbsp;</div>

        <span class="select">
          <% if @pool == true %>
        <a href="/applicant/final_pursued/<%= "#{@college.name}" %>">
          <b>
            Final Pursues
          </b>
        </a>
              <% else %>
          <a href="/applicant/final_pursued/<%= "#{@college.id}" %>">
            <b>
              Final Pursues
            </b>
          </a>
              <% end %>
        </span>

          <div class="clear"></div>
        </div>
        <!--  start nav -->

      </div>
      <div class="clear"></div>
      <!--  start nav-outer -->
    </div>
    <div class="clear"></div>
<% end %>
<div id="content-outer">
  <div id="content">
    <%= yield %>
    <div class="clear">&nbsp;</div>
  </div>
  <div class="clear">&nbsp;</div>
</div>
<div class="clear">&nbsp;</div>
<div id="footer">
  <div id="footer-left">
    &copy; Copyright ThoughtWorks Inc.. <span id="spanYear"></span> <a href="">www.thoughtworks.com</a>.
    All rights reserved.
  </div>
  <div class="clear">&nbsp;</div>
</div>
</body>
</html>