<h1>Listing colleges</h1>

<table id="applicants" class="display">
  <thead>
  <tr>
    <th>Name</th>
    <th>Number Of Applicants</th>

  </tr>
  </thead>

  <tbody>
  <% @colleges.each do |college|  %>

      <tr>
        <td style="border:1px solid black;"><%= link_to college.name, url="/applicant/show/#{college.name}" %></td>
        <td style="border:1px solid black;"><%= college.numberofapplicant %></td>
        <td><%= link_to college.name, url="/applicant/show_details/#{college.name}" %></td>
        <td><%= college.numberofapplicant %></td>
      </tr>

  <% end %>
  </tbody>
</table>

<button type="btn" ><%=  link_to "Add New College", new_college_path %></button>
