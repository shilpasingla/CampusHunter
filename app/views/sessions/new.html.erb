<h1>Log in</h1>

<%= form_tag sessions_path, class: "form-horizontal" do  %>
<p>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %>
</p>
    <br/>
<p>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:email] %>
</p>
<button type="submit" class="btn">Login</button>
<% end %>